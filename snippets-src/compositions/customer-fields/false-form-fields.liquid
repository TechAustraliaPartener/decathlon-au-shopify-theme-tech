<div class="inputWrap" data-marketing-hide>
  <label>{{ 'customer.register.first_name' | t }}</label>
  <input type="text" name="customer[first_name]" placeholder="First name" value="{{ customer.first_name }}" required>
</div>

<div class="inputWrap" data-marketing-hide>
  <label>{{ 'customer.register.last_name' | t }}</label>
  <input type="text" name="customer[last_name]" placeholder="Last name" value="{{ customer.last_name }}">
</div>

<div class="checkboxWrap">
  <input type="checkbox" value="Yes" name="customer[accepts_marketing]"
    {% if customer.accepts_marketing or get_account_info %}checked{% endif %}>
  <label class="label">{{ 'customer.account.marketing_optin' | t }}</label>
</div>

<label data-marketing-hide>Gender</label>
<select name="customer[gender]" data-marketing-hide>
  {% for gender in gender_values %}
  <option value="{{ gender }}" {% if customer.metafields.customr.gender == gender %}selected="selected" {% endif %}>
    {{ gender_titles[forloop.index0] }}
  </option>
  {% endfor %}
</select>

<label>Mobile Phone</label>
<div data-marketing-hide>
  <input type="text" name="country_code_number" value="+61" disabled style="width: 20%; display: inline-block;" />
  <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="customer[addresses][][phone]"
    value="{{ customer.default_address.phone }}" style="width: 79%; display: inline-block;" />
</div>

<label>Date of Birth</label>
<div>
  <input type="date" name="customer[birthday]" value="{{ customer.metafields.customr.birthday  }}" />
</div>

<label>Address</label>
<div>
  <input type="text" name="customer[addresses][][address1]" placeholder="Unit number, Street Name"
    value="{{ customer.default_address.address1 }}" />
  <input type="text" name="customer[addresses][][city]" placeholder="Suburb"
    value="{{ customer.default_address.city }}" />
  <input type="text" name="customer[postcode]" placeholder="Postcode"
    value="{{ customer.metafields.customr.postcode | strip }}" pattern="[0-9]{4}">
  <select name="customer[addresses][][province]" data-country="Australia">
    <option></option>
    <option>Australian Capital Territory</option>
    <option>New South Wales</option>
    <option>Northern Territory</option>
    <option>Queensland</option>
    <option>South Australia</option>
    <option>Tasmania</option>
    <option>Victoria</option>
    <option>Western Australia</option>
  </select>
</div>

{% assign preferred_store_names = 'Tempe, NSW | Auburn, NSW | Box Hill, VIC | Knoxfield, VIC | Moorabbin, VIC | No stores around me' | split: "|" %}

<label>Preferred Store</label>
<div>
  <select name="customer[preferred_store]" data-marketing-hide>
    <!-- <option value=""></option>
    <option>Tempe, NSW</option>
    <option>Auburn, NSW</option>
    <option>Box Hill, VIC</option>
    <option>Knoxfield, VIC</option>
    <option>Moorabbin, VIC</option>
    <option>No stores around me</option> -->
    <option value=''></option>
    {% for store in preferred_store_names %}
    <option value="{{ store }}" {% if customer.preferred_store == store %}selected="selected" {% endif %}>
      {{ preferred_store_names[forloop.index0] }}
    </option>
    {% endfor %}
  </select>
</div>

<div>
  <p>
    <input type="checkbox" name="customer[accepts_marketing]" /> Keep me up to date on news and exclusive offers <br />
    <input type="checkbox" name="customer[accepts_terms_conditions]" checked /> I have read & understood the <a
      href="#">T&Cs</a> of the offer.</p>
</div>