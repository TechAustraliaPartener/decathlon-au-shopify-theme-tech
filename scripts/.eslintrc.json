{
  "extends": [
    "plugin:@cloudfour/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style" // Contains rules like prefer-to-be-null
  ],
  "plugins": ["graphql", "jest"],
  "rules": {
    "graphql/template-strings": [
      "error",
      {
        "env": "literal",
        "tagName": "gql"
      }
    ]
  },
  "env": {
    "browser": true
  },
  "globals": {
    "google": true,
    "moment": true,
    "jest/globals": true
  }
}
