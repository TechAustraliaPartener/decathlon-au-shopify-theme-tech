.anchorList, .anchorList-item {
  margin-bottom:0;
}

.anchorList-link {
  text-transform: none;
  letter-spacing: normal;
  font-size: 14px!important;
  color: #000000;
  font-family: avalonbold,Helvetica Neue,Helvetica,Arial,sans-serif;
}

.anchorList-link--active, .anchorList-link--active:hover, .anchorList-link:hover {
  color: #0082c3;
  border-bottom: 2px solid #0082c3;
}

.starRating {
  letter-spacing: normal;
}

.yellowgram-icon .ico {
    font-size: 2.3em;
}

.ico {
    font-family: "Font Awesome" !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.ico--star:before {
  content: "\f005";
}

.ico--thumbsUp:before {
  content: "\f164";
}

.ico--check:before {
  content: "\f00c";
}

.ico--close:before {
  content: "\f00d";
}

.ico--de:before {
  content: url("{{ 'favicon-16x16.png' | asset_url }}");
}

@media (min-width:600px) {
.anchorList {
  display:flex;
  justify-content:space-evenly;
  align-items:center;
}

.anchorList-item {
  padding:0;
  line-height:1.3;
}

.anchorList-link {
  padding: 0 0.5em;
  font-size: 18px!important;
}
}

@media (min-width: 769px) {
  #bc-sf-filter-products {
    width: 100%;
  }
}

@media (max-width: 768px) {
  #bc-sf-filter-products {
    margin-left:-25px;
    margin-right:-25px;
  }
  .collectionProduct {
    padding-left: 0;
  }
}
