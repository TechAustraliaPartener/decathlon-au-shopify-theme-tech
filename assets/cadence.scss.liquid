.de-collectionImage {
  background-position: top;
}

.de-collectionImage-header {
  font-size: 40px;
  line-height: 50px;
}

.de-collectionImage-subheader {
  font-family: 'avalonregular';
  font-size: 20px;
  line-height: 28px;
}

@media (max-width:639px) {
.de-collectionTileImage {
  height: 100%;
  object-fit: cover;
  object-position: left;
}
}

@media (min-width:640px) {
.anchorList {
  display:flex;
  justify-content:space-evenly;
  align-items:center;
  margin-bottom:0;
}

.anchorList-item {
  padding:0;
  margin-bottom:0;
}

.anchorList-link {
  padding: 0 0.5em;
}
}