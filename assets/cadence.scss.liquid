.anchorList, .anchorList-item {
  margin-bottom:0;
}

.anchorList-link {
  text-transform: none;
  letter-spacing: normal;
  font-size: 14px!important;
  color: #000000;
  font-family: avalonbold,Helvetica Neue,Helvetica,Arial,sans-serif;
}

.anchorList-link--active, .anchorList-link--active:hover, .anchorList-link:hover {
  color: #0082c3;
  border-bottom: 2px solid #0082c3;
}

.starRating {
  letter-spacing: normal;
}

.ico {
    font-family: "Font Awesome" !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.ico--star:before {
  content: "\f005";
}

.ico--thumbsUp:before {
  content: "\f164";
}

.ico--check:before {
  content: "\f00c";
}

.ico--close:before {
  content: "\f00d";
}

.ico--de:before {
  content: url("{{ 'favicon-16x16.png' | asset_url }}");
}

.breadcrumb a, .breadcrumb span {
  padding: 0;
}

.de-blue-hr {
    height: calc(0.25rem / 2);
    border: none;
    margin-bottom: calc(0.25rem * 5)
}

.de-collectionImage {
  background-position: top;
  padding: 8em 0;
}

.de-collectionImage-header {
  font-size: 40px;
  line-height: 50px;
}

.de-collectionImage-subheader {
  font-family: 'avalonregular';
  font-size: 20px;
  line-height: 28px;
}

.de-padding10 {
  padding: 0 10px;
}

.de-padding-5-10, .de-padding-5-10:hover, .de-padding-5-10:focus {
  padding: 5px 10px;
}

.de-collection-menu-image {
  width: 64px;
  margin-right:10px;
}

.de-fontsize-14224 {
  font-size: 14.224px;
}

.de-inline-header {
  width: calc(100% - 78px);
}

.de-inline-block {
  display:inline-block;
  vertical-align:middle;
}

.de-mobile-fullwidth {
  width: 100%;
  .de-minheight-68 {
    min-height: 68px;
  }
}

.de-wrapper {
  padding:5px;
}

.de-collectionTile {
  padding:5px !important;
  line-height:0;
}

/* Shop menu CSS classes */

.de-ShopMenu {
  background: {{ settings.shop_menu_bg_color }};
}

.de-ShopMenu-title, .de-ShopMenu-subtitle, .de-ShopMenu-icon {
  color: {{ settings.shop_menu_text_color }};  
}

@media (max-width: 768px) {
  .de-collectionImage {
    background: none !important;
    padding: 2em 0 0;
  }

  .de-collectionImage-header {
    font-size: 26px;
    line-height: 32.5px;
    color: black;
  }
  .de-collectionImage-subheader {
    font-size: 16px;
    line-height: 23px;
    color: black;
  }
  .de-mobile-nopadding {
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }
  .de-mobile-nobordertop {
    border-top: 0 !important;
  }
  .de-mobile-noborderbottom {
    border-bottom: 0 !important;
  }
  .breadcrumb {
    font-size: 0.7em;
    margin:0 !important;
    min-height: 16px;
    a {
      padding-top: 16px;
      padding-bottom: 16px;
    }
  }
  .mobile-hide {
    display: none !important;
  }
}

@media (min-width:600px) {
.anchorList {
  display:flex;
  justify-content:space-evenly;
  align-items:center;
}

.anchorList-item {
  padding:0;
  line-height:1.3;
}

.anchorList-link {
  padding: 0 0.5em;
  font-size: 18px!important;
}
}

@media (min-width: 769px) {
  #bc-sf-filter-products {
    width: 100%;
  }
  .de-loading {
    display: none;
  }
}

@media (max-width: 768px) {
  .collectionProduct {
    padding-left: 0;
  }
  body.template-collection .adept-filter-group-wrapper .adept-filter, body.template-search .adept-filter-group-wrapper .adept-filter {
    max-height: calc(100vh - 100px) !important;
  }
  body.template-collection .adept-filter-mobile__toggle-container, body.template-search .de-PageWrap .main-content .adept-filter-mobile__toggle-container {
    right: 0 !important;
    width: auto !important;
    .adept-filter-mobile__toggle {
      color: #0082c3 !important;
      font-size: 14px !important;
      line-height: 1.6 !important;
      font-family: avalonmedium,Helvetica Neue,Helvetica,Arial,sans-serif!important;
      font-weight: 400!important;
      &:before {
      content: none !important;
      }
    }
  }
  body.template-collection .adept-filter-mobile__toggle-container {
    top: auto !important;
    margin-top: -40px;
  }
  body.template-search .main-content .adept-filter-mobile__toggle-container {
    top: -12px !important;
  }
  body.template-search .adept-search__query-visualization {
    font-size: 14px !important;
  }
  #bc-sf-filter-products {
    margin-left: -15px;
    margin-right: -15px;
    float: none !important;
  }
  .de-collection-multi {
    opacity: 0;
  }
  .de-loading {
    position:absolute;
    margin-top:40px;
    width:100%;
    z-index:9;
    left:0;
    img {
    width:48px;
    }
  }
}
