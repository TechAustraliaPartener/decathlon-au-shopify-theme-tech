.anchorList, .anchorList-item {
  margin-bottom:0;
}

.anchorList-link {
  text-transform: none;
  letter-spacing: normal;
  font-size: 18px!important;
  color: #000000;
}

.anchorList-link--active, .anchorList-link--active:hover, .anchorList-link:hover {
  color: #0082c3;
  border-bottom: 2px solid #0082c3;
}

@media (min-width:640px) {
.anchorList {
  display:flex;
  justify-content:space-evenly;
  align-items:center;
}

.anchorList-item {
  padding:0;
  line-height:1.4;
}

.anchorList-link {
  padding: 0 0.5em;
}
}