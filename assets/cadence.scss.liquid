.anchorList, .anchorList-item {
  margin-bottom:0;
}

.anchorList-link {
  text-transform: none;
  letter-spacing: normal;
  font-size: 14px!important;
  color: #000000;
  font-family: avalonbold,Helvetica Neue,Helvetica,Arial,sans-serif;
}

.anchorList-link--active, .anchorList-link--active:hover, .anchorList-link:hover {
  color: #0082c3;
  border-bottom: 2px solid #0082c3;
}

.starRating {
  letter-spacing: normal;
}

.yellowgram-icon .ico {
    font-size: 2.3em;
}

.ico {
    font-family: "Font Awesome" !important;
    speak: none;
    font-style: normal;
    font-weight: normal;
    font-variant: normal;
    text-transform: none;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
.ico--star:before {
  content: "\f005";
}

.ico--thumbsUp:before {
  content: "\f164";
}

.ico--check:before {
  content: "\f00c";
}

.ico--close:before {
  content: "\f00d";
}

.ico--de:before {
  content: url("{{ 'favicon-16x16.png' | asset_url }}");
}

.de-collectionImage {
  background-position: top;
  padding: 8em 0;
}

.de-collectionImage-header {
  font-size: 40px;
  line-height: 50px;
}

.de-collectionImage-subheader {
  font-family: 'avalonregular';
  font-size: 20px;
  line-height: 28px;
}

.de-wrapper {
  padding:5px;
}

.de-collectionTile {
  padding:5px !important;
  line-height:0;
}

@media (max-width: 768px) {
  .de-collectionImage {
    background: none !important;
    padding: 2em 0 0;
  }

  .de-collectionImage-header {
    font-size: 26px;
    line-height: 32.5px;
    color: black;
  }
  .de-collectionImage-subheader {
    font-size: 16px;
    line-height: 23px;
    color: black;
  }
}

@media (min-width:600px) {
.anchorList {
  display:flex;
  justify-content:space-evenly;
  align-items:center;
}

.anchorList-item {
  padding:0;
  line-height:1.3;
}

.anchorList-link {
  padding: 0 0.5em;
  font-size: 18px!important;
}
}

@media (min-width: 769px) {
  #bc-sf-filter-products {
    width: 100%;
  }
}

@media (max-width: 768px) {
  #bc-sf-filter-products {
    margin-left:-25px;
    margin-right:-25px;
  }
  .collectionProduct {
    padding-left: 0;
  }
  body.template-collection .adept-filter-group-wrapper .adept-filter {
    max-height: calc(100vh - 100px) !important;
  }
  body.template-collection .adept-filter-mobile__toggle-container {
    right: 0 !important;
    top: 30px !important;
    width: auto !important;
  }
}
