$color-blue: #0082c3;
$color-darkgray: #464646;
$color-gray: #acb3b8;
$color-silver: #f3f3f3;
$color-white: #fff;

/**
 * Border Width
 *
 * @todo: These variables DO NOT need to be copied over to `product.scss.liquid`
 * because they already exist there.
 */

$border-width-sm: 1px;
$border-width-md: 2px;

