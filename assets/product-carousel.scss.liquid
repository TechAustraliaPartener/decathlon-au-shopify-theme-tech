/*  --------------------------------------------------------------------------- */
/* Collection Products */
/*  --------------------------------------------------------------------------- */

.collectionProduct {
  text-align: center;
  position: relative;
  padding-left: 15px;
}

.collectionProduct:nth-child(2n+1) { clear: both; }
.slick-slider .collectionProduct:nth-child(2n+1) { clear: none; }

.collectionProduct-relative {
  position: relative;
  z-index: 1;
  min-height: 300px;
}
.collectionProduct-flag {
  margin-top: $space;
  position: absolute;
}

.collectionProduct-flag:before {
  border-width: 7px;
  border-style: solid;
  border-color: #9fc22b #9fc22b transparent transparent;
  content: '';
  position: absolute;
  bottom: -14px;
  left: 0;
}

.collectionProduct-image {
  width: 80%;
  margin: auto;
}
.slick-slide .collectionProduct-imageLink {
  padding: $space*1.5 0 $space*3.5;
  outline: none;
  display: block;
}
.collectionProduct-content {
  margin-bottom: 0;
  //padding: 0 $space*2;
  line-height: 1.4;
}
.collectionProduct-title {
  color: $black;
  max-height: 26px;
  overflow: hidden;
  display: inline-block;
}
.collectionProduct-price { font-family: $secondaryFontStack; }
.btn.collectionProduct-btn {margin-top: $space*1.5; padding: 14px 15px 12px !important; }

.collectionProduct-hoverWrap { display: none !important; }

.collectionProduct-addToCart.disabled:hover,
.collectionProduct-addToCart.disabled {
  border-color: #f6f6f6;
  background: #f6f6f6;
  color: #b6b6b6;
}

.collectionProduct-optionSelect .wk-select .selector-wrapper { margin-bottom: $space; }
.collectionProduct-optionSelect .wk-select label {
  display: inline-block;
  padding: $space*.8 $space 0 0;
  width: auto;
  text-align: right;
}
.collectionProduct-optionSelect .wk-select select { width: 135px; margin-bottom: 0; }

@include at-query($min, 600px) {
  .collectionProduct { padding-left: 30px; }
  .collectionProduct-relative { min-height: 345px; }
  .collectionProduct-content { line-height: 1.6; }
}

// TODO: this should really be "responsive"
.getGoingPack .slick-dots { display: none !important; }

.collectionImage { padding: $space*10 0; }

.collectionProduct { }
.collectionProduct:nth-child(2n+1) { clear: none; }

.collectionProduct-addToCart { padding: $space $space $space*.8; }

.collectionProduct--featured { width: (2/3)*100%; }
.collectionProduct--featured .collectionProduct-imageLink { padding: $space*5.5 0; }

.collectionProduct--featured + .collectionProduct--featured { width: (1/3)*100%; }
.collectionProduct--featured + .collectionProduct--featured .collectionProduct-imageLink  { padding: 0 0 $space*3; }

.collectionProduct--featured--middle { float: right; }
.collectionProduct.collectionProduct--nextIsEndFeatured {
  clear: both;
}

.collectionProduct--featured--end {
  float: right;
  margin-top: -43%;
}

.collectionProduct-hoverWrap {
  display: none;
  position: absolute;
  z-index: -1;
  top: 0;
  left: -25px;
  right: -25px;
  bottom: -10px;
}
.getGoingPack-currentProductWrapper .collectionProduct-hoverWrap {
  left: 12%;
  right: 12%;
}
.collectionProduct-hoverWrap-shadow {
  margin: 3px 3px 0;
  height: 100%;
  background: $white;
}
.collectionProduct-hoverBox {
  position: absolute;
  z-index: 1;
  overflow: hidden;
  top: 100%;
  width: 100%;
  margin: 3px 0 0 -3px;
}
.collectionProduct-hoverBox-shadow {
  margin: 0 3px 3px;
  background: $white;
}

.collectionProduct-optionSelect {
  select {
    width: 135px;
    margin: 0 auto $space*1.5;
  }

  label {
    display: inline-block;
    font-size: 16px;
    width: 35px;
    margin-right: 10px;
  }
}

.collectionProduct-addToCart {
  min-width: 180px;
  width: auto;
  text-align: center;
  margin-bottom: $space*2.5;
}

.supports-no-touch .timber-activeProduct .collectionProduct-relative,
.supports-no-touch .collectionProduct-relative:hover {
  z-index: 2;
  .collectionProduct-hoverWrap { display: block; }

  .collectionProduct-colors .option {
    &.option--active,
    &:hover {
      border-color: #848484;
    }
  }
}

.slickSlider-collectionProductFix {
  overflow-y: visible;
  z-index: 1;
}
.slickSlider-collectionProductFix .slick-list {
  height: 800px;
  overflow-x: hidden;
}
.slickSlider-collectionProductFix .slick-dots { z-index: -1; }

/* Collection Tile */
.ais-page {
  .ais-results-as-block .ais-hit.ais-product{
    padding-left: 0px;
    padding-right: 0px;
    .ais-hit--reviews {
      min-height: 32px;
    }
  }
  .ais-hits--item {
    .ais-hit--cart-button {
      background-color: #fff;
      color: #158EC2;
      border: solid 2px #158EC2;
      padding: 16px 8px 14px 8px;
      width: 100%;
      font-family: "avalonbold";
      letter-spacing: 1.2px;
    }
    .ais-hit--cart-button__disabled {
      color: #e20c18;
      border: none;
    }
  }
  .ais-product {
    .ais-hit--title,
    .ais-hit--title a {
      color: #1e1e1e;
      white-space: normal;
      overflow: unset;
    }
    .ais-hit--price {
      display: flex;
      flex-direction: row-reverse;
      justify-content: center;
      font-size: 16px;
      margin: 15px 0 9px;
      color: #000;
      .ais-hit--price-discount {
        display: none;
      }
      b,
      span {
        line-height: 20px;
        font-family: "avalonbold";
        margin: 0 3px;
      }
      .ais-hit--price-striked,
      .ais-hit--price-striked span {
        color: #e53322;
      }
    }
  }
  @media screen and ( max-width: 1200px ) {
    .ais-hits-container .ais-hits .ais-hits--item .ais-hit {
      width: 48%;
      margin-left: 4%;
    }
    .ais-hits-container .ais-hits .ais-hits--item:nth-child(2n+1) .ais-hit {
      margin-left: 0;
      clear: both;
    }
  }
}


.collectionProduct-colors {
  bottom: $space*2;
  margin: 0 auto;
  position: absolute;
  width: 100%;
}

.collectionProduct-colors .option {
  border: 1px solid #d8d8d8;
  border-radius: 1px;
  cursor: pointer;
  display: inline-block;
  height: $space*.6;
  width:25%;
  max-width: 2em;
  background-clip: padding-box;
}

/*  --------------------------------------------------------------------------- */
/* Star Rating */
/*  --------------------------------------------------------------------------- */

.starRating-container,
.collectionProduct-rating,
.adept-product-rating__info {
  display: flex;
}
.collectionProduct-rating {
  max-width: 100px;
}
.starRating-container {
  margin-bottom: 12px;
  justify-content: center;
}
.adept-product-rating__text {
  margin-right: 8px;
}

.collectionProduct-rating {
  margin: 30px auto 0;
  width: 100%;
}
.collectionProduct-rating[data-rating="0"] {
  opacity: 0;
}

.starRating {
  letter-spacing: 1px;
  padding-bottom: 3px;

  .ico--star { color: $midGray; }
  .ico--star.u-textYellow { color: $yellow; }
}

.starRating--noRating .ico--star { color: $lightGray; }
.collectionProduct-rating .product-rating-info,
.collectionProduct-rating .starRating-count {
  display: inline-block;
  margin-left: 10px;
  margin-bottom: 0;
  font-size: 14px;
}


/*  --------------------------------------------------------------------------- */
/* Labels */
/*  --------------------------------------------------------------------------- */

.trendingProducts .collectionProduct-flag,
.ais-hit--label {
  position: absolute;
  z-index: 1;
  color: gray;
  top: 6px;
  left: 10px;
  text-transform: uppercase;
  padding: 6px 12px !important;
  font-size: 12px !important;
  line-height: 1.6 !important;
  font-family: "avalonbold";
  &:before {
    content: " ";
    position: absolute;
    left: 1px;
    z-index: -1;
    bottom: -13px;
    width: 10px;
    height: 0;
    transform: rotate(45deg);
    background-color: transparent;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    border-top: none;
    border-bottom: none;
  }
  &.collectionProduct-flag--innovation,
  &.innovation {
    background-color: #cbfb00;
    color: #1e1e1e;
    &:before {
      border-bottom: 15px solid darken(#cbfb00, 10%);
    }
  }
  &.clearance {
    background-color: #e20c18;
    color: #fff;
    &:before {
      border-bottom: 15px solid darken(#e20c18, 10%);
    }
  }
  @include at-query($min, 768px) {
    left: 0px;
  }
}

