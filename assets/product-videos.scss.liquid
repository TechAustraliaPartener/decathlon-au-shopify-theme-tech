/**
 * Media Queries
 */
$breakpoint-md: 40em;

.de-ProductPhoto {
  position: relative;
  overflow: hidden;
}

.de-watch-video-button {
  cursor: pointer;
  svg {
    vertical-align: middle;
  }
}

.de-thumb {
  padding: 10px;
}

.de-slick--videos-thumbnails {
  margin-left: -10px;
}

@media (max-width: $breakpoint-md) {
  .de-slick--videos {
    margin: auto;
  }
  .de-slick--videos-thumbnails {
    display: none;
  }
  .de-thumb {
    padding: 40px 80px;
  }
}
