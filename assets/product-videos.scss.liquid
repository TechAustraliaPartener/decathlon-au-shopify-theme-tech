/**
 * Media Queries
 */

$breakpoint-lg: 60em;


/**
 * 1. Make the video appear square
 * 2. Make the poster appear square
 */
.de-copyVideo {
  .vjs-tech {
    object-fit: cover; /* 1 */
  }
  .vjs-poster {
    background-size: cover; /* 2 */
  }
}

.de-ProductPhoto {
  position: relative;
  overflow: hidden;
}

.de-watch-video-button {
  cursor: pointer;
  svg {
    vertical-align: middle;
  }
}

.de-thumb {
  padding: 10px;
}

@media (min-width: 40em) {
  .de-slick--videos {
    max-width: 80%;
    margin: auto;
  }
  .de-thumb {
    padding: 40px 80px;
  }
}

@media (min-width: $breakpoint-lg) {
  .de-copyVideo {
    display: none;
  }
}
