/*
  Variable definitions
*/
$color-black: #2a2b2c;
$color-blue: #0082c3;
$color-darkgray: #464646;
$color-gray: #acb3b8;
$colorSecondary: {{ settings.color_secondary }};
$color-silver: #f3f3f3;
$color-white: #fff;
$color-red: #e53322;
$size-unit: .25rem;
$max-icon-width: 17px;


/*
  Utilities
*/
.de-u-spaceLeft07 {
  margin-left: $size-unit;
}

.de-blue-hr {
  height: calc(#{$size-unit} / 2);
  border: none;
  margin-bottom: calc(#{$size-unit} * 5);
}

.de-u-iconContainer {
  max-width: 17px;
}

/*
  Components
*/
.de-StoreFinder {
  min-height: 676px;
}

.de-StoreMap {
  height: 300px;
}

.de-StoreController {
  min-height: 375px;
  background: white;
  border-bottom: calc(#{$size-unit} / 2) solid $colorSecondary;
}

.de-StoreController-loader {
  height: 192px;
}

.de-StoreController-loaderImage {

}

.de-StoreSearch-inputWrapper {
  position: relative;
  border: 2px solid $color-silver;
}

.de-StoreSearch-inputWrapper:hover,
.de-StoreSearch-inputWrapper.isFocused {
  border-color: $color-blue;
}

.de-StoreSearch-input,
.de-StoreSearch-input:hover,
.de-StoreSearch-input:focus {
  background: transparent;
  border: unset;
  width: calc(100% - 46px);
  padding-right: calc(#{$size-unit} * 9);
}

.de-StoreSearch-clear {
  position: absolute;
  top: 50%;
  right: calc(#{$size-unit} * 11);
  width: calc(#{$size-unit} * 6);
  height: calc(#{$size-unit} * 6);
  transform: translate(-50%, -50%);
}

.de-StoreSearch-submit {
  color: $color-black;
}

.de-StoreSearch-submit .de-Icon {
  width: 24px;
  height: 24px;
}

.de-StoreSearch-submit.isFocused {
  color: $color-white;
  background-color: $color-blue;
}

.de-StoreTile {
  width: 100%;
  text-align: left;
  -moz-appearance: none;
  -webkit-appearance: none;
  appearance: none;
  background: transparent;
  border: 2px solid $color-white;
  border-top: 2px solid $color-silver;
  outline: 0;
  margin-top: 2px;
}

.de-StoreTile.de-is-active {
  border-color: $color-blue;
}

.de-StoreTile-address {
  margin-top: $size-unit;
}

.de-StoreTile-actionsButton:first-child {
  margin-left: auto;
}

.de-StoreNoLocations-inputWrapper {
  position: relative;
}

.de-StoreNoLocations-input,
.de-StoreNoLocations-input:hover,
.de-StoreNoLocations-input:focus {
  border: 2px solid $color-silver;
  border-right: unset;
  width: calc(100% - 80px);
}

.de-StoreNoLocations-input:hover,
.de-StoreNoLocations-input:focus {
  border-color: $color-blue;
}

.de-StoreNoLocations-submit {
  color: $color-white;
  width: 80px;
}

.de-StoreNoLocations-checkbox {
  border: 1px solid $color-blue;
  border-radius: $size-unit;
  color: $color-white;
  width: 20px;
  height: 20px;
}

.de-StoreNoLocations-checkbox .de-Icon {
  width: 10px;
}

.de-StoreTile-info {
  position: relative;
}

.de-StoreTile-tooltip {
  display: none;
  position: absolute;
  bottom: 25px;
  left: 0;
  background-color: #fff;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  border: solid 1px #ccc;
  border-radius: 5px;
  z-index: 10;
  min-width: 280px;
  padding: 20px;

  &::after {
    content:'';
    display:block;
    width: 10px;
    height: 10px;
    position:absolute;
    border-right: solid 1px #ccc;
    border-top: solid 1px #ccc;
    transform: rotate(135deg);
    left: 20px;
    bottom: -6px;
    background-color: #fff;
  }

  h4 {
    font-size: 14px;
  }
  hr {
    margin: 20px 0;
  }
  .fullhours-list {
    list-style: none;
    margin: 0;
    font-size: 12px;
    font-family: avalonregular;

    li {
      margin: 0;
      display: table-row;
      .weekday,
      .tooltip-hours {
        display: table-cell;
      }
      .weekday {
        padding-right: 10px;
      }
    }
  }
  p,
  .tooltip-announcement {
    font-size: 12px;
    margin: 10px 0 0;
  }
}

.de-StoreTile:first-of-type .de-StoreTile-tooltip {
  top: calc(100% + 7px);
  bottom: unset;
  &::after {
    transform: rotate(-45deg);
    left: 20px;
    top: -6px;
    bottom: unset;
  }
}
.de-StoreTile-tooltipOpener {
  cursor: pointer;
  text-decoration: underline;
  &:hover ~ .de-StoreTile-tooltip {
    display: block;
  }
}

/*
  Media queries
*/
@media (min-width: 1000px) {
  .de-StoreFinder {
    position: relative;
    min-height: 665px;
  }

  .de-StoreController {
    position: absolute;
    top: 100px;
    left: 40px;
    width: 350px;
    max-width: 404px;
    z-index: 10;
    bottom: 30px;
    overflow-y: scroll;
  }

  .de-StoreMap {
    height: 665px;
  }
  .de-StoreTile-tooltip {
    width: 100%;
  }
}


/*
  Remove extra margin on footer (only effects '/pages/store-finder')
*/
.blue-band--footer {
  margin-top: unset;
}
