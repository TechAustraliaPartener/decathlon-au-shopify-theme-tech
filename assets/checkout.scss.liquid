.modal.gift-card-modal {
  border-radius: 0;
  z-index: 11;

  .spacing {
    margin: 20px 0;
  }

  form {

    .inputRow {
      font-size: 0;

      .inputWrap {
        padding-right: 15px;

        &:last-of-type {
          padding-right: 0;
        }
      }
    }
    .inputWrap {
      position: relative;

      &.w-80 {
        width: 80%;
        display: inline-block;
      }

      &.w-20 {
        width: 20%;
        display: inline-block;
      }
    }

    label {
      float: left;
      width: 100%;
      position: absolute;
      padding: 0.35em 0 0 1.2em;
      color: #999999;
      z-index: 1;
      font-size: 12px;
      -moz-transition: all 0.2s ease-out;
      -ms-transition: all 0.2s ease-out;
      -webkit-transition: all 0.2s ease-out;
      transition: all 0.2s ease-out;
      text-align: left;
      font-family: "avalonregular","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
    }

    input {
      border: 1px solid #b7b7b7;
      color: #353535;
      background-color: #ffffff;
      box-sizing: border-box;
      font-size: 15px;
      height: 51px;
      line-height: 19px;
      margin: 0;
      width: 100%;
      box-shadow: none;
      padding: 1.4em 1em .6em 1em;

      &.error {
        border-color: #ff0000;
        -webkit-box-shadow: 0 0 0 1px #ff0000;
        box-shadow: 0 0 0 1px #ff0000;
      }
      &::placeholder {
        letter-spacing: 0.6em;
      }
    }

    .btn {
      padding-top: 15px;
      padding-bottom: 15px;
      float: right;

      &.close {
        background-color: white;
        color: #737373;
        float: left;
      }
    }
  }

  h2 {
    font-family: "avalon_mediumbold","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 2em;
    color: #000;
    padding: 16px 0 6px;
  }
  p.subheading {
    color: #000;
  }
  hr {
    margin: 24px 0 30px;
  }
  .btn.close {
    padding-left: 0;
    padding-right: 0;
  }

  .errorMessage {
    color: #d80000;
  }
  h5 {
    font-family: "avalon_mediumbold","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
    font-size: 1.4em;
    color: #000;
    text-align: center;
  }

  .gift-card-thanks {
    text-align: center;
    line-height: 1.5;

    .gift-card-emphasis {
      font-family: "avalon_mediumbold","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
      font-size: 1.6em;
      padding: 5px 0;
      display: block;
    }
    .icon--free-tag {
      margin: 0 auto 1em;
      display: block;
    }
  }
  /*===== Spinner =====*/

  .lds-ring {
    display: inline-block;
    position: relative;
    width: 64px;
    height: 64px;
  }
  .lds-ring div {
    box-sizing: border-box;
    display: block;
    position: absolute;
    width: 51px;
    height: 51px;
    margin: 6px;
    border: 6px solid #1c82c3;
    border-radius: 50%;
    animation: lds-ring 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    border-color: #1c82c3 transparent transparent transparent;
  }
  .lds-ring div:nth-child(1) {
    animation-delay: -0.45s;
  }
  .lds-ring div:nth-child(2) {
    animation-delay: -0.3s;
  }
  .lds-ring div:nth-child(3) {
    animation-delay: -0.15s;
  }
  .screen {
    background-color: white;
    background-color: rgba(255,255,255,0.75);
    opacity: 1;
    position: absolute;
    z-index: 99;
    top: 145px;
    right: 25px;
    bottom: 0;
    left: 25px;

    .lds-ring {
      margin: 20px auto 10px;
      display: block;
    }

    &.mobile {
      position: fixed;
      @media screen and (min-width: 640px) {
        display: none !important;
      }
    }
    &.desktop {
      @media screen and (max-width: 639px) {
        display: none !important;
      }
    }
  }

}

.tooltip-opener {
  cursor: pointer;
  &:hover ~ .hours-tooltip {
    display: block;
  }
  text-decoration: underline;
}

.hours-tooltip {
  display: none;
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0px 2px 10px rgba(0,0,0,0.2);
  border: solid 1px #ccc;
  border-radius: 5px;
  z-index: 10;
  padding: 20px;

  &::after {
    content:'';
    display:block;
    width: 10px;
    height: 10px;
    position:absolute;
    border-right: solid 1px #ccc;
    border-top: solid 1px #ccc;
    transform: rotate(-45deg);
    left: 20px;
    top: -6px;
    background-color: #fff;
  }
}
.tooltip-announcement {
  font-size: 12px;
  margin: 20px 0 0;
}
.tooltip-content {
  margin: 0;
  font-size: 12px;
  font-family: avalonregular;
  color: #2a2b2c;
  h4 {
    font-size: 14px;
    font-family: avalonbold;
  }
  strong {
    font-family: avalonbold;
  }
  hr {
    margin: 20px 0;
  }
  p,
  .tooltip-announcement {
    font-size: 12px;
    margin: 10px 0 0;
  }
  .fullhours-list {
    list-style: none;
    margin: 0;

    li {
      margin: 0;
      display: table-row;
      .weekday,
      .tooltip-hours {
        display: table-cell;
      }
      .weekday {
        padding-right: 10px;
      }
    }
  }
}

