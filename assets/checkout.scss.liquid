.de-pickup-location {
  padding: 13px;
  box-sizing: border-box;
  border: 1px solid #d9d9d9;
  cursor: pointer;
  &.js-de-active-location, &:hover {
    border: 3px solid #1c82c3;
    padding: 11px;
  }
}

@media (max-width: 750px) {
  .de-pickup-locations li {
    width: 100% !important;
  }
}

.de-pickup-location p {
  margin-top: 0;
  margin-bottom: 0;
}

.de-pickship-btn {
  width:100%;
  display: block;
  border: 1px solid #1c82c3;
  color: #1c82c3;
  box-sizing: border-box;
  background:#fff;
  svg{
    height:30px;
    vertical-align: middle;
    margin-right: .5rem;
    .st0 {
      @include transition(all 0.1s ease-in);
      fill: none;
      stroke:#1c82c3;
      stroke-linecap:square;
    }
  	.st1 {
      @include transition(all 0.1s ease-in);
      fill: none;
      stroke:#1c82c3;
    }
  }

  &:hover, &.js-de-active-pickship-btn {
    background:#1c82c3;
    color: #fff;
    .st0 {
      fill: none;
      stroke: #fff;
      stroke-linecap: square;
    }
  	.st1 {
      fill: none;
      stroke: #fff;
    }
  }
}

.de-pickup-location-map-img {
  width: 100%;
}

@media (min: 750px) {
  .de-pickship-btn-container:nth-child(even), .de-pickup-locations li:nth-child(even) {
    padding-right: 0;
  }
  .de-pickship-btn-container:nth-child(odd), .de-pickup-locations li:nth-child(odd) {
    padding-left: 0;
  }
}

@media (max-width: 750px) {
