@mixin prefix($property, $value) {
  -webkit-#{$property}: #{$value};
  -moz-#{$property}: #{$value};
  -ms-#{$property}: #{$value};
  -o-#{$property}: #{$value};
  #{$property}: #{$value};
}

@mixin transition($transition: $transition-speed-fast all) {
  @include prefix('transition', #{$transition});
}

/**
 * Checkout styles
 */

.btn,
.field__input,
.content-box,
.input-checkbox,
.product-thumbnail::after {
  border-radius: 0;
}

.btn {
  font-family:
    "avalonbold","HelveticaNeue","Helvetica Neue",Helvetica,Arial,sans-serif;
  font-size: 16px;
  font-weight: normal;
  letter-spacing: $border-width-md;
  text-transform: uppercase;
  -webkit-font-smoothing: antialiased;
}

@media (min-width: 1000px) {
  .page--no-banner .main, 
  .page--no-banner .sidebar {
    padding-top: 1em;
  }
}

@media (max-width: 1000px) {
  .banner {
    padding: 10px 0 5px 0;
  }
  .logo__image--small {
    height: 35px;
    max-height: 35px;
  }
}

.de-pickup-location {
  border: $border-width-sm solid $color-light-gray;
  cursor: pointer;
  padding: 12px;

  /**
   * @TODO
   * 1. Don't use `js-` selctors for styling
   */

  &.js-de-active-location,
  &:hover {
    border: $border-width-lg solid $color-blue;
    padding: 11px;
  }
}

@media (max-width: 750px) {
  .de-pickup-locations li {
    width: 100% !important;
  }
}

.de-pickup-location p {
  margin-bottom: 0;
  margin-top: 0;
}

.de-pickship-btn {
  @include transition( 
    background-color color $transition-speed-fast $transition-easing-ease );
  align-items: center;
  background: $color-white;
  border: $border-width-sm solid $color-blue;
  box-sizing: border-box;
  color: $color-blue;
  display: flex;
  justify-content: center;
  padding: 0.8em;
  width: 100%;

  .de-Pickship-icon {
    font-size: 2.8em;
  }

  &:hover,
  &.de-is-active {
    background-color: $color-blue;
    color: $color-white;
  }
}

@media (min: 750px) {
  .de-pickship-btn-container:nth-child(even),
  .de-pickup-locations li:nth-child(even) {
    padding-right: 0;
  }
  .de-pickship-btn-container:nth-child(odd),
  .de-pickup-locations li:nth-child(odd) {
    padding-left: 0;
  }
}

@media (max-width: 750px) {
  .de-pickship-btn-container {
    width: 100% !important;
  }
}

.de-payment-continue {
  float: right;
}

.de-visit-cal-container {
  float: right;
}

// Matches Shopify style
.de-location-heading {
  color: #333;
  font-size: 1.28571em;
}

.de-location-hr {
  border: none;
  height: $border-width-lg;
}

.section--contact-information .section__header {
  margin-top: 20px;
}

.main {
  position: relative;
}

.de-loading-overlay {
  background: $color-white;
  height:100%;
  left: -3px;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 10;
}

.de-checkout-loader {
  left: 50%;
  position: absolute;
  top: 250px;
  transform: translateX(-50%);
  width: 50px;
}

[data-address-field="company"] {
  display: none;
}

.section--shipping-address {
  padding-top: 0;
}

.section--shipping-address .section__title {
  margin-top: 30px;
}

.btn.js-de-BtnDisabled:hover{
  background-color: $color-blue;
}
