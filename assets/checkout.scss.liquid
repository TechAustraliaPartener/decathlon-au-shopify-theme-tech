.js-de-pickup-locations li{
  width:50%;
  float:left;
  padding: 0.42857em;
  box-sizing: border-box;
}

.js-de-pickup-locations li:nth-child(n+3) {
  display: none;
}

.de-pickup-location {
  width:100%;
  padding: 20px;
  box-sizing: border-box;
  border: 1px solid #d9d9d9;
  cursor: pointer;
  &.js-de-active-location, &:hover {
    border-color: #1c82c3;
  }
}

.de-pickup-location span {
  display: block;
}

.de-pickship-btn-container {
  width:50%;
  float:left;
  padding: 0.42857em;
  box-sizing: border-box;
}

.de-pickup-location-name{
  font-weight: bold;
  margin-bottom:8px;
}

.de-pickup-location-hours{
  font-weight: bold;
  font-size: smaller;
  margin-top: 8px;
}

.de-pickship-btn {
  width:100%;
  display: block;
  border: 1px solid #1c82c3;
  color: #1c82c3;
  box-sizing: border-box;
  background:#fff;
  svg{
    height:30px;
    vertical-align: middle;
    margin-right: .5rem;
    .st0 {
      @include transition(all 0.1s ease-in);
      fill: none;
      stroke:#1c82c3;
      stroke-linecap:square;
    }
  	.st1 {
      @include transition(all 0.1s ease-in);
      fill: none;
      stroke:#1c82c3;
    }
  }

  &:hover, &.js-de-active-pickship-btn {
    background:#1c82c3;
    color: #fff;
    .st0 {
      fill: none;
      stroke: #fff;
      stroke-linecap: square;
    }
  	.st1 {
      fill: none;
      stroke: #fff;
    }
  }
}

.js-de-pickup-location-map {
  width: 100%;
}

.js-de-pickup-location-map-img {
  width: 100%;
  margin-top: 17px;
}

.de-pickship-btn-container:nth-child(even), .js-de-pickup-locations li:nth-child(even) {
  padding-right: 0;
}
.de-pickship-btn-container:nth-child(odd), .js-de-pickup-locations li:nth-child(odd) {
  padding-left: 0;
}
