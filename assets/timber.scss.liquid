tr.addon__item {
  margin-bottom: 10px;
}

tr.addon__item td {
  padding-top: 5px;
  padding-bottom: 5px;
}

@include at-query($min, $small) {
  tr.addon__item td:nth-child(2) {
    border-left: 1px solid #e5e5e5;
    position: relative;
  }

  tr.addon__item:last-child td:nth-child(2):after {
    content: ' ';
    display: block;
    height: 1px;
    width: 10px;
    position: absolute;
    left: 0;
    bottom: 0;
    background: #e5e5e5;
  }
}

@include at-query($max, $small) {
  tr.addon__item {
    border-left: solid 1px #e5e5e5;
    margin-bottom: 0;
  }

  tr.addon__item:after {
    content: ' ';
    display: block;
    height: 1px;
    width: 10px;
    position: absolute;
    left: 0;
    bottom: 0;
    background: #e5e5e5;
  }
}

tr.addon__item + tr.spacer {
  height: 20px;
}

