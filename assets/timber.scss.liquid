/**
 * Banners
 */
.grid__item.banner,
.banner {
  @include block();
  text-align: left;
  padding: $space*2;
}

.banner--billboard {
  background-color: $white;
  background-size: cover;
  color: $white;
  padding: $space*6 0;
  background-position: top center;
  text-align: left;
  position: relative;
}

[data-slick-index="0"] {
	.banner--billboard {
		background-size: cover;
		opacity: 1;
		transition: opacity 0.7s ease-in;

		&.loading {
			opacity: 0;
		}
	}
}

.banner--billboard__overlay {
	position: absolute;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,.15);
	margin-top: -112px;
	opacity: 1;
	transition: opacity 0.7s ease-in;

	@media (max-width: 768px) {
		margin-top: -84px;
	}

	&.loading {
		opacity: 0;
	}
}

