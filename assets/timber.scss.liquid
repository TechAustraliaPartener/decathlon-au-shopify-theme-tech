.paginate-bottom {
    display: -ms-flexbox;
    display: flex;
    list-style: none;
    -ms-flex-pack: center;
    justify-content: center;
    width: 100%;
    margin-left: 0;
    margin-right: 0;
	padding: 70px 0 30px;
}

.paginate-bottom span.page.current,
.paginate-bottom span.page.current:hover {
    color: #000;
    background: #ccfb00;
	line-height: 1;
	-webkit-transition: all .3s ease-out;
	-o-transition: all .3s ease-out;
	transition: all .3s ease-out;
	padding: 10px 15px;
	font-size: 1rem;
	display: block;
	cursor: pointer;
	line-height: 1;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;

}

.paginate-bottom span a {
    line-height: 1;
    -webkit-transition: all .3s ease-out;
    -o-transition: all .3s ease-out;
    transition: all .3s ease-out;
    padding: 10px 15px;
    font-size: 1rem;
    display: block;
    color: #1c82c3;
    background: transparent;
    cursor: pointer;
    line-height: 1;
    -webkit-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
}


.paginate-bottom span.page a:hover{
	color: #fff;
    background: #1c82c3;
}

