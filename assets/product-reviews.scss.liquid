/**
 * @pattern ReviewMatrix
 * Consider converting this into a pattern in the future.
 */

.de-CustomerReview {
  border-bottom: $border-width-sm solid $color-silver;
}

.de-CustomerReview:last-of-type {
  border-bottom: 0;
}

