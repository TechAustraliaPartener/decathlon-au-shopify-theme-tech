.ais-preloader-container{
  position: absolute;
  width: 100%;
  height: 700px;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 2;
  bottom: 0;
  background-image: linear-gradient(to bottom, transparent 0, white 50%);
  pointer-events: none;
  opacity: 0.9;
}

.ais-preloader-container.hidden{
  display: none;
}
@media screen and (min-width: 800px) {
  .ais-preloader-container{
    height: 960px;
  }
}

.ais-preloader-container .preloader {
  z-index: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5% 0;
  flex-direction: column;
}

.ais-preloader-container .preloader-gif{
  width: 100px;
  height: 100px;
}

.ais-preloader-container .preloader-copy{
  color: #1e1e1e;
  font-size: 14px;
  font-family: avalonmedium, Helvetica Neue,Helvetica,Arial,sans-serif !important;
  font-weight: 400!important;
  text-align: center;
}
