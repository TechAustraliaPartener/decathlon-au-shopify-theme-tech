#spinningLoad { display: inline;}

.account-writeReviewButton {
 cursor: pointer;  
}

.writeReview {
  display: none;
  position: fixed;
  top: 0;
  z-index: 160;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .7);
}

.writeReview .u-centerVertically {
    max-width: 900px;
    margin: 0 auto;
    height: 100%;
  }
  
.writeReview .u-centerVertically {
  position: relative;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}

@media screen and (min-width: 621px) and (max-width: 797px){
  .writeReview .u-centerVertically {
    top: 56%;
  }
}

@media screen and (min-width: 1025px){
  .writeReview .u-centerVertically {
    top: 58%;
  }
}
/* #shopify-products-for-review,
#newStore-products-for-review { display: none; } */

.writeReview-wrapper--after { display: none; }

  .writeReview-wrapper,
.writeReview-wrapper--after {
  position: relative;
  background: #ffffff;
  text-align: center;
  padding: 1em*4 1em*1.5;
  height: 100%;
  max-height: 100vh;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.writeReview-wrapper .close-btn,
.writeReview-wrapper--after .close-btn {
    position: absolute !important;
    right: 1em*1.4;
    top: 1em*1.7;
    color: #ffffff;
    outline: none;
    cursor: pointer;
    background-image: url({{ 'close.svg' | asset_url }});
    width: 15px;
    height: 15px;
  }

.writeReview-wrapper h3,
.writeReview-wrapper--after h3 {
    text-transform: inherit;
    margin-bottom: 0.6em;
    font-size: 1.5em;
  }

.writeReview-wrapper h5,
.writeReview-wrapper--after h5 {
    text-transform: uppercase;
    margin-bottom: 1em*2;
    font-size: 1em;
    letter-spacing: 1px;
  }

.writeReview-wrapper .form-vertical,
.writeReview-wrapper--after .form-vertical {
    max-width: 500px;
    margin: 0 auto;
}
.writeReview-wrapper .form-vertical input[type="submit"],
.writeReview-wrapper--after .form-vertical input[type="submit"],
.writeReview-wrapper .form-vertical input[type="button"],
.writeReview-wrapper--after .form-vertical input[type="button"] {
      display: block;
      margin: 1em auto 0;
      padding: 1em 1em*1.1;
      border: 0;
      background: #2a2b2c;
      color: #ffffff;
      width: auto;
      font-size: 16px;
      line-height: 1.3;
    }

.writeReview-wrapper .form-vertical input[type="button"],
.writeReview-wrapper--after .form-vertical input[type="button"] {
      margin: 0 auto;
      background: #ffffff;
      color: #2a2b2c;
      cursor: pointer;
      font-family: 'avalonbold','HelveticaNeue', 'Helvetica Neue', Helvetica, Arial, sans-serif;;
    }
.writeReview-wrapper .form-vertical input[type="submit"],
.writeReview-wrapper--after .form-vertical input[type="submit"] {
      background: transparent;
      border: 2px solid {{ settings.color_primary }};
      color: {{ settings.color_primary }};
    }
  .writeReview-wrapper .form-vertical input[type="submit"]:hover,
.writeReview-wrapper--after .form-vertical input[type="submit"]:hover {
      background: {{ settings.color_primary }};
      color: #ffffff;
    }
  

  

.writeReview-wrapper h5 {
  margin-left: 10%;
  margin-right: 10%;
}
