function moveRefineSearch() {
  if (window.innerWidth <= 768) {
    if (jQuery('.ais-facets div ul .custom-menu.accordion').length > 0) {
      jQuery('.ais-page').prepend(jQuery('.custom-menu.accordion'));
      jQuery('html').css('overflow', 'visible');
      jQuery('.ais-facets-button').text('Show filters');
      jQuery('.ais-facets-button').insertBefore('.ais-facets__shown');
      jQuery('.ais-facets').removeClass('ais-facets__shown');
    }
  } else if (jQuery('.ais-page > .custom-menu.accordion').length > 0) {
    jQuery('.custom-menu.accordion').appendTo('.ais-facets div ul');
    jQuery('.custom-menu.accordion ul').show();
  }
}

