/**
 * Color Palette
 *
 * Variable names are based on similar CSS extended color keyword values.
 *
 * @see https://www.w3.org/TR/2018/REC-css-color-3-20180619/#svg-color
 */

$color-black: #2a2b2c;
$color-blue: #0082c3;
$color-darkgray: #464646;
$color-gray: #acb3b8;
$color-lime: #cbfb00;
$color-silver: #f3f3f3;
$color-white: #fff;
$color-red: #e53322;

/**
 * Border Width
 */

$border-width-sm: 1px;
$border-width-md: 2px;
$border-width-lg: 3px;

/* ProductTitleLockup */

.ProductTitleLockup {
  position: relative;
}

@media (min-width: 960px) {
  .ProductTitleLockup {
    border-bottom: $border-width-sm solid $color-silver;
  }
}

@media (min-width: 960px) {
  .ProductTitleLockup-rating {
    bottom: 15px;
    position: absolute;
    right: 0;
  }
}

.de-ProductLabel {
  display: inline-block;
  line-height: 1.2;
  text-transform: uppercase;
  padding: 0.38125em 0.75375em;
  z-index: 1;
  position: absolute;
  top: 0;
  right: 0;
}

.de-ProductLabel--red {
  background-color: $color-red;
  color: $color-white;
}


/* ProductGallery */

.ProductGallery {
  display: flex;
  height: 100%;
  position: relative;
}

@media (min-width: 960px) {
  .ProductGallery {
    min-width: 60%;
  }
}

.ProductGallery-thumbnails {
  height: 100%;
  overflow-y: scroll;
  padding-right: 1rem;
  position: absolute;
  width: 16%;
  -webkit-overflow-scrolling: touch;
}

.Fade--bottom {
  background-image: url(prototype-bottom-fade.png);
  bottom: -2px;
  height: 125px;
  left: 0;
  position: sticky;
  width: 100%;
  z-index: 100;
}

.ProductGallery-showcase {
  position:relative;
}

@media (min-width:960px) {
  .ProductGallery-showcase {
    margin-left: 17%;
  }
}

.ProductBuyBox {

}

@media (min-width: 960px) {
  .ProductMoreInfo {
    border-bottom: $border-width-lg solid $color-lime;
  }
}

@media (min-width: 960px) {
  .ProductBuyBox {
    min-width: 40%;
    max-width: 50%;
    padding-left: 2.027rem;
  }
}

/* Swatch patterns */

.de-SwatchContainer {
  display: grid;
  grid-gap: calc(20px / 2);
  grid-template-columns: 0.5em;
  grid-auto-flow: column;
  grid-auto-columns: 78px;
  overflow-y: hidden;
  overflow-x: scroll;
  -webkit-overflow-scrolling: touch;
}

.de-SwatchContainer::-webkit-scrollbar {
  display: none;
}

.de-SwatchContainer--color {
  grid-auto-columns: calc(28% - 20px * 2);
}

.de-SwatchContainer--size {
  grid-auto-columns: minmax(76px, calc(33% - 40px));
  grid-auto-columns: minmax(76px, auto);
  grid-template-rows: 48px;
}

.de-SwatchContainer--size .Swatch-indicator {
  height: 48%;
}

.de-SwatchContainer::before,
.de-SwatchContainer::after {
  content: '';
  width: 0.5em;
}

.de-SwatchColor-item {
  display: flex;
  border: 1px solid $color-white;
  padding: 0.5em;
}

.de-SwatchColor-item:disabled img {
  opacity: 0.1;
}

.de-SwatchColor-item.de-is-active {
  border: 2px solid $color-blue;
}

.de-SwatchColor-item:focus {
  outline: none;
}

.de-SwatchColor-item:focus:not(.de-is-active) {
  outline: 2px solid $color-blue;
  outline-offset: -4px;
}

/* Color Swatches */

.de-SwatchGrid {
  display: flex;
  overflow-x: scroll;
  padding: 0.35em 10px;
  -webkit-overflow-scrolling: touch;
}

.de-SwatchGrid::-webkit-scrollbar {
  display: none;
}

/**
 * 1. The desired height for the element. A minimum recommended touch target 
 * size is around 48 device independent pixels on a site with a properly set 
 * mobile viewport.
 */

.de-SwatchGrid-item {
  padding: 0 5px;
  height: 48px; //* 1 *//
}

.de-SwatchGrid-item:last-of-type {
  padding-right: 20px;
}

.de-SwatchGrid-info {
  border: 1px solid $color-darkgray;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10px;
  position: relative;
  height: 100%;
  white-space: nowrap;
  min-width: 78px;
  cursor: pointer;
}

.de-SwatchGrid-info:focus {
  outline: none;
}

.de-SwatchGrid-info:not(.de-is-active):focus {
  outline: 2px solid $color-blue;
  outline-offset: -4px;
}

.de-SwatchGrid-info.de-is-soldout:before {
  content: '';
  position: absolute;
  left: -0.014em;
  right: -0.14em;
  top: 0.01em;
  bottom: 0.03em;
  background: linear-gradient(to left top, transparent 50.5%, currentColor 43.5%, currentColor 52.5%, transparent 45.5%);
  pointer-events: none;
}

.de-SwatchGrid-info.de-is-active {
  border: 2px solid $color-blue !important;
  color: $color-blue;
}

.de-SwatchGrid-info.de-is-outofstock {
  border: 1px solid $color-gray;
  color: $color-gray;
  cursor: none;
  background-color: $color-silver;
}

// Add to cart

.de-AddToCart .js-qty__num {
  width: 100%;
}

// State Classes

.de-is-soldout {
  background-color: $color-white !important;
  color: $color-gray !important;
}


