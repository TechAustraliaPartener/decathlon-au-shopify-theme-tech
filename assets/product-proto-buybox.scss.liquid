/**
 * Color Palette
 *
 * Variable names are based on similar CSS extended color keyword values.
 *
 * @see https://www.w3.org/TR/2018/REC-css-color-3-20180619/#svg-color
 */

$color-black: #2a2b2c;
$color-blue: #0082c3;
$color-darkgray: #464646;
$color-gray: #acb3b8;
$color-lime: #cbfb00;
$color-silver: #f3f3f3;
$color-white: #fff;
$color-red: #e53322;

/**
 * Border Width
 */

$border-width-sm: 1px;
$border-width-md: 2px;
$border-width-lg: 3px;

/**
 * Media Queries
 */

$breakpoint-lg: 60em;

/* 
 * ProductTitleLockup 
 */

.de-ProductTitleLockup {
  position: relative;
}

@media (min-width: $breakpoint-lg) {
  .de-ProductTitleLockup {
    border-bottom: $border-width-sm solid $color-silver;
  }
}

@media (min-width: $breakpoint-lg) {
  .de-ProductTitleLockup-rating {
    bottom: 15px;
    position: absolute;
    right: 0;
  }
}

.de-ProductTitleLockup-price {
  display: none;
}

@media (min-width: $breakpoint-lg) {
  .de-ProductTitleLockup-price {
    display: flex;
  }
}

/* ProductLabel 
 * 
 */

.de-ProductLabel {
  display: inline-block;
  line-height: 1.2;
  text-transform: uppercase;
  padding: 0.38125em 0.75375em;
  z-index: 1;
  position: absolute;
  top: 0;
  right: 0;
}

.de-ProductLabel--red {
  background-color: $color-red;
  color: $color-white;
}

/* 
 * ProductGallery 
 */

.ProductGallery {
  display: flex;
  height: 100%;
  position: relative;
  width: 100%;
}

.ProductGallery--large {
  display: none;
}
@media (min-width: $breakpoint-lg) {

  .ProductGallery--large {
    display: flex;
  }
}

.ProductGallery-thumbnails {
  height: 100%;
  overflow-y: scroll;
  padding-right: 1rem;
  position: absolute;
  width: 16%;
  -webkit-overflow-scrolling: touch;
}

.ProductGallery-thumbnails::-webkit-scrollbar {
  display: none;
}

.ProductGallery-showcase {
  position:relative;
}

@media (min-width:$breakpoint-lg) {
  .ProductGallery-showcase {
    margin-left: 17%;
    width: 100%;
  }
}

.GalleryImage {
  width: 100%;
}

/** 
 * Product Buy Box
 */

@media (min-width: $breakpoint-lg) {
  .ProductBuyBox {
    width: 43vw;
    padding-left: 2.027rem;
  }

  .ProductMoreInfo {
    border-bottom: $border-width-lg solid $color-lime;
  }
}
  