        <div class="de-u-size4of5 de-u-xl-size5of6" id="mega-tabs">
          <div class="de-u-sizeFull">
            <div class="de-u-padSides2">
              <div class="de-MenuBar">
                <h2 class="de-MenuBar-heading">
                  Shop All Sports…
                </h2>
                <ul class="de-MenuBar-list">
                  <li>
                    <button class="de-MenuBar-action"
                      data-de-collapsible-target="mega-tab-activity"
                      data-de-collapsible-action="show">
                      By Activity
                    </button>
                  </li>
                  <li>
                    <button class="de-MenuBar-action"
                      data-de-collapsible-target="mega-tab-alpha"
                      data-de-collapsible-action="show">
                      From A – Z
                    </button>
                  </li>
                  <li>
                    <button class="de-MenuBar-action"
                      data-de-collapsible-target="mega-tab-women"
                      data-de-collapsible-action="show">
                      For Women
                    </button>
                  </li>
                  <li>
                    <button class="de-MenuBar-action"
                      data-de-collapsible-target="mega-tab-men"
                      data-de-collapsible-action="show">
                      For Men
                    </button>
                  </li>
{% comment %} TODO: uncomment when ready
                  <li>
                    <button class="de-MenuBar-action"
                      data-de-collapsible-target="mega-tab-kids"
                      data-de-collapsible-action="show">
                      For Kids
                    </button>
                  </li>
{% endcomment %}                   
                </ul>
              </div>
            </div>
            <div class="de-u-pad2 de-u-borderTopSm de-u-borderGray50 de-u-borderOverlapTopSm">
              <div class="de-Collapsible js-de-Collapsible" data-parent="mega-tabs" id="mega-tab-activity">
                {% include '_header--nav-wide-list',
                  list: linklists["activities"] %}
              </div>
              <div class="de-Collapsible js-de-Collapsible" data-parent="mega-tabs" id="mega-tab-alpha">
                {% include '_header--nav-wide-az' %}
              </div>
              <div class="de-Collapsible js-de-Collapsible" data-parent="mega-tabs" id="mega-tab-women">
                {% include '_header--nav-wide-list',
                  list: linklists["womens"] %}
              </div>
              <div class="de-Collapsible js-de-Collapsible" data-parent="mega-tabs" id="mega-tab-men">
                {% include '_header--nav-wide-list',
                  list: linklists["mens"] %}
              </div>
{% comment %} TODO: uncomment and confirm kids is correct linkList when ready
              <div class="de-Collapsible js-de-Collapsible" data-parent="mega-tabs" id="mega-tab-kids">
                {% include '_header--nav-wide-list',
                  list: linklists["kids"] %}
              </div>
