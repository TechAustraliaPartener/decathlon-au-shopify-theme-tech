<div class="grid__item large--one-half productFeature productFeature--{{ title | handleize }}">
  <div class="grid--full">
    <div class="grid__item one-fifth productFeature-icon"><img style="width: 70%;" src="" data-src="{{ icon_url }}" alt="{{ title }}" /></div>
    <div class="grid__item four-fifths productFeature-content">
      <h5 class="productFeature-title">{{ title }}</h5>
      <p class="productFeature-description">{{ description }}</p>
    </div>
  </div>
</div>
