<div class="de-u-sizeFull">
  <div class="de-FlexEmbed">
    <div class="de-FlexEmbed-ratio de-FlexEmbed-ratio--4by3"></div>
    <img class="de-FlexEmbed-content" src="{% if settings.shop_menu_image %}{{ settings.shop_menu_image | img_url: "master" }}{% else %}{{ 'story_split_full_content_1_image.jpg' | asset_url }}{% endif %}" alt="">
  </div>
  <ul class="de-MenuList">
    <li>
      <a class="de-MenuList-item de-MenuList-item--brand de-ShopMenu de-u-padSides2" href="{% if settings.shop_menu_link %}{{ settings.shop_menu_link }}{% else %}/pages/our-story{% endif %}">
        <div class="de-MenuList-content">
          <h5 class="de-MenuList-heading de-ShopMenu-title">{{ settings.shop_menu_title }}</h5>
          <p class="de-MenuList-summary de-ShopMenu-subtitle">{{ settings.shop_menu_subtitle }}</p>
        </div>
        {% include 'patterns-icons-chevron', class: 'de-MenuList-icon de-ShopMenu-icon', role: 'presentation' %}
      </a>
    </li>
    {% comment %} <li>
      <a class="de-MenuList-item de-MenuList-item--lastcall de-u-padSides2" href="/pages/last-call">
        <div class="de-MenuList-content">
          <h5 class="de-MenuList-heading">Last Call</h5>
          <p class="de-MenuList-summary">End of Season Deals</p>
        </div>
        {% include 'patterns-icons-chevron', class: 'de-MenuList-icon', role: 'presentation' %}
      </a>
    </li> {% endcomment %}
  </ul>
  <div class="de-u-pad2">
    <ul class="de-u-listReset de-u-spaceNone de-u-lineHeight3">
      {% for link in linklists.additional-shopping.links %}
        <li class="de-u-spaceNone">
          <a class="de-u-linkClean de-u-textShrink1" href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
  <div class="de-u-pad2 de-u-borderTopMd de-u-borderOverlapTopMd de-u-borderGray50">
    <ul class="de-u-listReset de-u-spaceNone de-u-lineHeight3">
      {% for link in linklists.brand-menu.links %}
        <li class="de-u-spaceNone">
          <a class="de-u-linkClean de-u-textShrink1" href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
