{% if template.directory == 'customers' %}
  {% if template.name == 'login' %}
    {% if settings.login_portal_url != blank %}
      <meta http-equiv="refresh" content="0; URL='{{ settings.login_portal_url | default: '/account/login' }}'"/>
    {% endif %}
  {% elsif template.name == 'register' %}
    {% if settings.regsiter_portal_url != blank %}
      <meta http-equiv="refresh" content="0; URL='{{ settings.register_portal_url | default: '/account/register' }}'"/>
    {% endif %}
  {% endif %}
{% endif %}
