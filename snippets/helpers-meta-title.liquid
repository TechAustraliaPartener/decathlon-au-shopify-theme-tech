{%- if page_title == 'order-newstore' -%}
  Order | {{shop.name}}
{%- else -%}
  {% assign page_title_filtered =  page_title | replace: "| Decathlon", "" %}

  {% render 'compositions-product-page-title-filter', title: page_title_filtered %}

  {% if current_tags %}
    {% assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags }}
  {% endif %}
  {% if current_page != 1 %} 
    &ndash; {{ 'general.meta.page' | t: page: current_page }}
  {% endif %}
  {% unless template.name == "index" %} | {{ shop.name }}{% endunless %}
{%- endif -%}
