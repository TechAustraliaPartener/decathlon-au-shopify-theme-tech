{% raw %}
  <script id="picshareTemplate" type="text/template">
  <div class="picshare">
    <div class="u-centerVertically">
      <div class="u-centerVertically-ie">
        <div class="picshare-wrapper">
          <button class="close-btn js-closePicshare" type="button"></button>
          <h5>Share your experience with this product</h5>
          <div class="form-vertical">
            <form method="post" action="{{ INSTAGRAM_ROOT }}/api/v1/media/posts?language=en&country=US&ovbearer={{ token }}">

            <div class="formInput-wrapperGroup">
              <div class="inputWrap">
                <label for="ContactFormFirstName">First Name*</label>
                <input type="text" id="ContactFormFirstName" class="input-full" name="author.firstname" required placeholder="First Name*"/>
              </div>

              <div class="inputWrap">
                <label for="ContactFormLast Name">Last Name*</label>
                <input type="text" id="ContactFormLastName" class="input-full" name="author.lastname" placeholder="Last Name*" required />
              </div>

              <div class="inputWrap">
                <label for="ContactFormEmail">Email Address*</label>
                <input type="email" id="ContactFormEmail" class="input-full" name="author.email" autocorrect="off" autocapitalize="off" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" placeholder="Email Address*" />
              </div>

              <div class="inputWrap">
                <label for="ContactFormAge">Age*</label>
                <input type="number" id="ContactFormAge" class="input-full" name="age" required min="1" placeholder="Age*" />
              </div>
            </div>

            <div class="inputWrap">
              <label for="ContactFormMessage">Description* - max 140 characters</label>
              <textarea rows="4" id="ContactFormMessage" class="input-full" name="description" placeholder="Description* - max 140 characters"></textarea>
            </div>

            <div class="inputWrap inputWrap--imageUpload imageUploadForm">
              <label for="ContactFormImage">Picture*</label>
              <input type="file" accept="image/png,image/gif,image/jpeg" id="ContactFormImage" class="input-full" name="file" autocorrect="off" required autocapitalize="off" />
            </div>

            <input type="hidden" name="productReference" value="{{ modelCode }}" />
            <input type="hidden" name="siteReference" value="{{ siteCode }}" />

            <input type="submit" class="btn" value="SHARE PHOTO">
            <input type="button" class="js-closePicshare" value="CANCEL">

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  </script>
{% endraw %}
