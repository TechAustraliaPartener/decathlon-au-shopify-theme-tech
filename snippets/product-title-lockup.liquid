{% comment %} Title Lockup {% endcomment %}
<div class="de-ProductTitleLockup de-u-lg-padBottom">
  {% include 'product-flag' with 
    content: 'Custom Flag'
    class: 'de-u-bgSilver de-u-textBlue' %}

  <div class="de-u-flex de-u-flexJustifyBetween de-u-padTop de-u-md-padTopNone">
    <div class="de-u-size1of2">
      {% assign brand_logo_prefix = 'logo_brand_' %}
      {% assign brand_logo_name = product.vendor | downcase | remove: "'" %}
      {% assign brand_logo_filename = brand_logo_prefix | append: brand_logo_name %}
      {% include brand_logo_filename
        with class: 'de-LogoSportsBrand' %}
    </div>
    {% include 'product-rating-reviews-link' %}
  </div>
  <h1 class="de-u-textGrow2 de-u-textMedium" itemprop="name">{{ product.title }}</h1>
  <div class="de-ProductTitleLockup-price">
    <div class="de-ProductPrice de-u-textMedium de-u-flex de-u-flexAlignItemsEnd">
    <span class="visually-hidden">{{ 'products.general.regular_price' | t }}</span>
    <span id="ProductPrice" class="js-de-ProductPrice de-u-textGrow6 de-u-lineHeight1" itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
      {{ current_variant.price | money }}
    </span>

    <span class="visually-hidden">{{ 'products.general.sale_price' | t }}</span>
    <span id="ComparePrice" class="de-u-textGrow2 de-u-padLeft de-u-lineHeight2">
      <del class="js-de-ComparePrice-text">{{ current_variant.compare_at_price | money }}</del>
    </span>
    </div>
  </div>
</div>
