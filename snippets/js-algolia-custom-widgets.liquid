<script>
  window.algolia_custom_widgets = {
    {% if template.name == 'collection' %}
      menu : `{% capture menu %}{% include 'algolia_custom_menu' %}{% endcapture %}{{ menu | newline_to_br }}`,
      title : `{{ collection.title }}`,
      description : `{% capture collection_description %}{% include 'algolia_custom_collection_description' %}{% endcapture %}{{ collection_description }}`,
      desktopBanner : `{% capture banner %}{% render 'algolia_custom_banner', collection: collection, viewport: 'desktop' %}{% endcapture %}{{ banner }}`,
      secondBanner : `{% capture banner %}{% render 'algolia_dev_custom_banner', collection: collection, viewport: 'desktop' %}{% endcapture %}{{ banner }}`,
      mobileBanner : `{% capture banner %}{% render 'algolia_custom_banner', collection:  collection, viewport: 'mobile' %}{% endcapture %}{{ banner }}`
    {% endif %}
  };
</script>
