{% stylesheet %}



  .sliderImage {
    background-color: white;
  }

  .sliderImage * {
    background-color: white;
  }

  .sliderImage .collectionSport-content{
    text-align : center;
    font-size : 18px;
    padding : 40px 10px 0px 10px;
  }
  
  .sliderImage .collectionSlider-image {
    display: block;
    margin-left: auto;
    margin-right : auto;
    width: 100%;
  }
  
  
  
  .sliderImage .trendingProducts-title {
    margin-left : 10px;
    padding: 10px 40px 20px 0;
    height: 75px;
    background: none;
    margin-bottom: 30px;
}
  
  .sliderImage .category_heading-h1 {
    position: absolute;
    top: 0;
    z-index: 1;
    text-transform: uppercase;
    font-size: 3rem;
    font-weight: 800;
    opacity: .1;
    letter-spacing: 4px;
    color: #6b6b6b;
  	overflow: hidden;
    height: 55px;
  	left: 150px;
    width: calc(100% - 150px);
}

  .slick-arrow {
   	height: 60px;
    width: 60px;
    opacity: 0.4;
  }

  .sliderImage .category_heading p {
    font-size: 1.2rem;
    color: #52575A;
    padding: 0 10px 10px 10px;
    position: relative;
    line-height: 28px;
    margin-bottom: .5rem;
    z-index: 0;
    text-transform: uppercase;
    letter-spacing: 4px;
    font-weight: 600;
    text-align: left;
    display: block;
    margin-block-start: 1em;
    margin-block-end: 1em;
    margin-inline-start: 0px;
    margin-inline-end: 0px;
  	text-align: left;
}

  .sliderImage .category_heading {
    margin-bottom: 30px;
  	position : relative;
}

.sliderImage .grid--full.js-slick--attr .grid__item.collectionProduct{
 	padding-left: 8px;
  	padding-right: 8px;
}
  
