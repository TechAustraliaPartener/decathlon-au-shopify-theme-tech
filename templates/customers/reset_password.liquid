<!-- /templates/customers/reset_password.liquid -->

<div class="wrapper u-paddingTopBottom4x u-marginBottom4x">
  <div class="grid">

  
    <h1 class="h3 text-center">{{ 'customer.reset_password.title' | t }}</h1>
    <div class="grid__item large--one-third push--large--one-third">
  
      <div class="form-vertical">
        {% form 'reset_customer_password' %}
  
          <p class="text-center">{{ 'customer.reset_password.subtext' | t: email: email }}</p>
  
          {{ form.errors | default_errors }}
          <div class="inputWrap">
            <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="ResetPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
          </div>
  
          <div class="inputWrap">
            <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="input-full{% if form.errors contains 'password_confirmation' %} error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
          </div>
  
          <div class="text-center">
            <input type="submit" class="btn btn--full btn--fill" value="{{ 'customer.reset_password.submit' | t }}">
          </div>
  
        {% endform %}
      </div>
  
    </div>
  </div>
</div>
