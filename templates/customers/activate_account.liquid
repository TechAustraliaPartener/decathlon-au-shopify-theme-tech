<!-- /templates/customers/activate_account.liquid -->

<div class="u-block u-paddingTopBottom6x">
  <div class="wrapper wrapper--midWidth">

    <h1 class="h3 text-center">{{ 'customer.activate_account.title' | t }}</h1>
    <p class="text-center">{{ 'customer.activate_account.subtext' | t }}</p>

    {% comment %}
      This form must use 'activate_customer_password'
    {% endcomment %}
    <div class="form-vertical">
      {% form 'activate_customer_password', class: 'activateCustomerForm' %}

        {{ form.errors | default_errors }}

      <div class="inputWrap">
        <label for="CustomerPassword">{{ 'customer.activate_account.password' | t }}</label>
        <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full" placeholder="{{ 'customer.activate_account.password' | t }}">
      </div>

      <div class="inputWrap">
        <label for="CustomerPasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
        <input type="password" value="" name="customer[password_confirmation]" id="CustomerPasswordConfirmation" class="input-full" placeholder="{{ 'customer.activate_account.password_confirm' | t }}">
      </div>

        <input type="submit" class="btn btn--full" value="{{ 'customer.activate_account.submit' | t }}">
        {% comment %}<input type="submit" class="btn--secondary btn--full" name="decline" value="{{ 'customer.activate_account.cancel' | t }}">{% endcomment %}
      {% endform %}
    </div>

  </div>
</div>
